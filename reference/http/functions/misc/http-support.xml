 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример использования <function>http_support</function></title>
    <programlisting role="php">
<![CDATA[
<?php
if (!http_support(HTTP_SUPPORT_REQUESTS)) {
    die("Необходима поддержка HTTP запросов!\n");
}
?>
]]>
